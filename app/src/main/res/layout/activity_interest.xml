<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_interest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@drawable/main"
    tools:context="sandeep.carsol.Interest">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa80ae03"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="humanitics"

        android:padding="5dp"
        android:background="@drawable/rounded_rect"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/button2"
        android:layout_below="@+id/butto"
        android:layout_toEndOf="@+id/button"
        android:layout_marginTop="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer"
        android:padding="5dp"
        android:onClick="computer"
        android:clickable="true"
        android:background="@drawable/rounded_rect"
        android:textColor="#000"
        android:id="@+id/computer_btn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"

        android:layout_below="@+id/button"
        android:layout_toEndOf="@+id/butto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Technology"

        android:background="@drawable/rounded_rect"
        android:textColor="#000"
        android:id="@+id/butto"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/computer_btn"
        android:layout_toEndOf="@+id/button2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="law"

        android:background="@drawable/rounded_rect"
        android:textColor="#000"
        android:id="@+id/button"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="126dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commerce"

        android:clickable="true"
        android:onClick="commerce"
        android:background="@drawable/rounded_rect"
        android:textColor="#000"
        android:padding="5dp"
        android:id="@+id/commerce_btn"
        android:layout_marginStart="45dp"
        android:layout_above="@+id/butto"
        android:layout_toEndOf="@+id/button" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:background="@color/colorAccent"
        android:text="DONE"
        android:clickable="true"
        android:onClick="open_home"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="10dp"/>
</RelativeLayout>
